{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "ignorePatterns": ["__tests__/"],
  "rules": {
    "max-params": ["error", 2],
    "max-depth": ["error", 1]
  }
}
